<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(https://static.vinepair.com/wp-content/uploads/2015/06/fake-cocktail-bar-liqueurs.jpg);">
  <div class="container p-3">
    <h1>Welcome to Sophia's Cocktail Bar</h1>
    <p>Enjoy our creative drinks!</p>
    <%= link_to 'add a cocktail', new_cocktail_path, class: 'btn btn-flat' %>
  </div>
</div>


<div class="m-5 container d-flex justify-content-around">
  <% @cocktails.each do |cocktail| %>
  <%= link_to cocktail_path(cocktail) do %>
    <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(<%= cl_image_path cocktail.photo%>)">
    <%= cocktail.name %>
    </div>
  <% end %>

  <% end %>
</div>

