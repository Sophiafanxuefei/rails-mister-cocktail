<h2>you can create your cocktail here</h2>

<div class="container">
<%= simple_form_for (@cocktail) do |f| %>
  <%= f.input :name %>
  <%= f.input :photo %>
  <%= f.input :photo_cache, as: :hidden %>
  <%= f.submit "add a cocktail", class: "btn btn-primary" %>
<% end %>
<%= link_to 'home', cocktails_path, class: 'btn btn-flat my-3' %>
</div>


